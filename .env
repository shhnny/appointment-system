# ======================================
# PUBLIC ENVIRONMENT VARIABLES
# (Safe to commit - used by Vite in browser)
# ======================================

# ======================
# APPLICATION INFO
# ======================
VITE_APP_NAME="Barangay JP Rizal Appointment System"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="development"

# ======================
# BACKEND API CONFIGURATION
# ======================
VITE_API_URL="http://127.0.0.1:8000/api"
VITE_API_TIMEOUT="30000"

# ======================
# FRONTEND CONFIGURATION
# ======================
VITE_CLIENT_PORT="5173"
VITE_BASE_URL="http://localhost:5173"

# ======================
# FEATURE FLAGS
# ======================
VITE_ENABLE_DEBUG="true"
VITE_ENABLE_ANALYTICS="false"
VITE_ENABLE_MAINTENANCE_MODE="false"

# ======================
# EXTERNAL SERVICES (Builder.io)
# ======================
VITE_PUBLIC_BUILDER_KEY="__BUILDER_PUBLIC_KEY__"

# ======================
# APPLICATION SETTINGS
# ======================
VITE_APPOINTMENT_MIN_ADVANCE_DAYS="1"
VITE_APPOINTMENT_MAX_ADVANCE_DAYS="30"
VITE_DEFAULT_TIMEZONE="Asia/Manila"

# ======================
# TEST/DEMO SETTINGS
# ======================
PING_MESSAGE="ping pong"

# ======================
# UI/UX SETTINGS
# ======================
VITE_ENABLE_ANIMATIONS="true"
VITE_ENABLE_TOAST_NOTIFICATIONS="true"
VITE_DEFAULT_THEME="light"

# ======================================
# NOTE: For secret variables use DevServerControl
# tool with set_env_variable: ["KEY", "SECRET"]
# ======================================
